@model loganta.Areas.CUS02.Models.RegistrarDetalleProyecto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "RegistrarDetalleProyecto";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Registrar Detalle de Proyecto</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistrarDetalleDeProyecto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CuadroDeNecesidades.Proyecto.AreaUsuariaId" class="control-label">Elegir Área</label>
                <select asp-for="CuadroDeNecesidades.Proyecto.AreaUsuariaId" class="form-control" asp-items="ViewBag.AreasUsuarias"></select>
            </div>
            <div class="form-group">
                <label asp-for="CuadroDeNecesidades.Fecha" class="control-label">Fecha</label>
                <input asp-for="CuadroDeNecesidades.Fecha" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <label asp-for="CuadroDeNecesidades.Proyecto.Descripcion" class="control-label">Descripcion de Proyecto</label>
                <input asp-for="CuadroDeNecesidades.Proyecto.Descripcion" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Requerimiento.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requerimiento.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requerimiento.Precio)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CuadroDeNecesidades.Requerimientos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PresupuestoSolicitado)
        </dt>
        <dd class="col-sm-10">
            @Model.CuadroDeNecesidades.Requerimientos.Sum(i => i.Precio)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a href="https://localhost:44362">Cancelar</a>
    <input type="submit" value="Registrar" class="btn btn-primary" />
</div>