@model loganta.Areas.CUS02.Models.RegistrarDetalleProyecto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "RegistrarDetalleProyecto";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Registrar Detalle de Proyecto</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistrarDetalleProyecto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AreaUsuariaId" class="control-label">Elegir Área</label>
                <select asp-for="AreaUsuariaId" class="form-control" asp-items="ViewBag.AreasUsuarias"></select>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label">Fecha</label>
                <input asp-for="Fecha" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <label asp-for="DescripcionProyecto" class="control-label">Descripcion de Proyecto</label>
                <input asp-for="DescripcionProyecto" class="form-control" />
            </div>
            <div class="form-group">
                <a asp-action="AnadirRequerimiento" asp-route-id="@Model.AreaUsuariaId">Añadir</a>
                <input type="submit" value="Visualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
               Descripcion
            </th>
            <th>
              Precio
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Requerimientos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Presupuesto Solicitado
        </dt>
        <dd class="col-sm-10">
            @Model.Requerimientos.Sum(i => i.Precio)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a href="https://localhost:44362">Cancelar</a>
    <a href="https://localhost:44362">Registrar</a>
</div>