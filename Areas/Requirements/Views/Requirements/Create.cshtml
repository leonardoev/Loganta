@model loganta.Data.Entities.Requirement

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Registrar Crédito por Requerimiento</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Seleccione Proyecto:</label>
                <select asp-for="BudgetId" class="form-control" asp-items="ViewBag.BudgetId">
                    <option>Área 1</option>
                    <option>Área 2</option>
                    <option>Área 3</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Credito Presupuestal:</label>
                <input asp-for="Credit" class="form-control" />
                <span asp-validation-for="Credit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

