@model loganta.Areas.CUS01.Models.RegistrarCredito
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "RegistrarCredito";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Registrar Crédito Presupuestal</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <h6>Registrar Crédito por Proyecto</h6>
        <form asp-action="RegistrarCreditoProyecto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProyectoId" class="control-label"></label>
                <select asp-for="ProyectoId" class="form-control" asp-items="ViewBag.Proyectos"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreditoProyecto" class="control-label">Credito Presupuestal:</label>
                <input asp-for="CreditoProyecto" class="form-control" />
                <span asp-validation-for="CreditoProyecto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="https://localhost:44362">Cancelar</a>
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
        <h6>Registrar Crédito por Requerimiento</h6>
        <form asp-action="RegistrarCreditoRequerimiento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequerimientoId" class="control-label">Selecciona Requerimiento:</label>
                <select asp-for="RequerimientoId" class="form-control" asp-items="ViewBag.Requerimientos"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreditoRequerimiento" class="control-label">Crédito Presupuestal:</label>
                <input asp-for="CreditoRequerimiento" class="form-control" />
                <span asp-validation-for="CreditoRequerimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="https://localhost:44362">Cancelar</a>
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
