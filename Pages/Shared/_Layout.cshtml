<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - loganta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">loganta</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">CUS01</a>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="CUS01" asp-controller="CUS01" asp-action="RegistrarPresupuesto">Registrar Presupuesto de Area</a>
                                <a class="nav-link text-dark" asp-area="CUS01" asp-controller="CUS01" asp-action="RegistrarCredito">Ingresar Crédito Presupuestal</a>
                                <a class="nav-link text-dark" asp-area="CUS01" asp-controller="CUS01" asp-action="EvaluarCuadroDeNecesidades">Evaluar Cuadro de Necesidades</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">CUS02</a>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="CUS02" asp-controller="CUS02" asp-action="VerPresupuestoGeneral">Ver Presupuesto General</a>
                                <a class="nav-link text-dark" asp-area="CUS02" asp-controller="CUS02" asp-action="RegistrarDetalleProyecto">Registrar Detalle de Proyecto</a>   
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - loganta - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
